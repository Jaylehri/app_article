<tr id = 'article_<%= article.id%>'>

      <td><%= article.title %></td>
      <td><%= article.text %>
      </td>
      <%if has_role?(:admin)%>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit',edit_article_path(article) %></td>
        <td> <%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?'}, remote: true  %></td>
       <% else %>
        <td><%= link_to 'Show', article_path(article) %></td>
      <% end %>  
    </tr>
